<h4 class="panelToggle panelLabelSectionToggle{{#if openSections.panelOuterLabels}} expanded{{/if}}" data-section="panelOuterLabels">Outer Labels<span></span></h4>

<div id="panelOuterLabels" {{#compare openSections.panelOuterLabels false}}class="hidden"{{/compare}}>
	<div class="row paddedRow">
		<div class="col-md-4">
			<label for="outerLabel" class="control-label">Content</label>
		</div>
		<div class="col-md-8 padRight">
			<select id="outerLabel" class="form-control changeUpdateNoAnimation">
				<option value="none" {{#compare config.labels.outer.format "none"}}selected="selected"{{/compare}}>None</option>
				<option value="label" {{#compare config.labels.outer.format "label"}}selected="selected"{{/compare}}>Label</option>
				<option value="value" {{#compare config.labels.outer.format "value"}}selected="selected"{{/compare}}>Value</option>
				<option value="percentage" {{#compare config.labels.outer.format "percentage"}}selected="selected"{{/compare}}>Percentage</option>
				<option value="label-value1" {{#compare config.labels.outer.format "label-value1"}}selected="selected"{{/compare}}>label, value (same line)</option>
				<option value="label-value2" {{#compare config.labels.outer.format "label-value2"}}selected="selected"{{/compare}}>label, value (separate lines)</option>
				<option value="label-percentage1" {{#compare config.labels.outer.format "label-percentage1"}}selected="selected"{{/compare}}>label, percentage (same line)</option>
				<option value="label-percentage2" {{#compare config.labels.outer.format "label-percentage2"}}selected="selected"{{/compare}}>label, percentage (separate lines)</option>
			</select>
		</div>
	</div>
	<div class="row paddedRow">
		<div class="col-md-4">
			<label class="control-label">Hide Labels</label>
		</div>
		<div class="col-md-8">
			<input type="radio" name="hideOuterLabelCondition" id="hideOuterLabelCondition1" class="changeUpdateNoAnimation"
				{{#compare config.labels.outer.hideWhenLessThanPercentage null}}checked="checked"{{/compare}} />
				<label for="hideOuterLabelCondition1" class="padRight">Never</label>

			<input type="radio" name="hideOuterLabelCondition" id="hideOuterLabelCondition2" class="changeUpdateNoAnimation"
				{{#if config.labels.outer.hideWhenLessThanPercentage}}checked="checked"{{/if}} />
				<label for="hideOuterLabelCondition2">When under</label>
				<input type="number" class="smallField changeUpdateNoAnimation" id="outerHideWhenLessThanPercentage"
					min="1" max="99" maxlength="2"
					value="{{#compare config.labels.outer.hideWhenLessThanPercentage null}}1{{/compare}}{{#compare config.labels.outer.hideWhenLessThanPercentage null operator="!="}}{{config.labels.outer.hideWhenLessThanPercentage}}{{/compare}}"
					/> %
		</div>
	</div>
	<div class="row paddedRow">
		<div class="col-md-4">
			<label for="pieDistance">Distance from pie</label>
		</div>
		<div class="col-md-8">
			<input type="number" id="pieDistance" value="{{config.labels.outer.pieDistance}}" min="0" class="smallField keyupUpdateNoAnimation" />
		</div>
	</div>
</div>


