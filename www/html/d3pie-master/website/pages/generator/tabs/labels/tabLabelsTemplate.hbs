<h4 class="panelToggle panelLabelSectionToggle{{#if openSections.panelLabelLines}} expanded{{/if}}" data-section="panelLabelLines">Label Lines<span></span></h4>

<div id="panelLabelLines" {{#compare openSections.panelLabelLines false}}class="hidden"{{/compare}}>
	<div class="row paddedRow">
		<div class="col-md-6">
			<input type="checkbox" id="showLabelLines" {{#compare config.labels.lines.enabled true}}checked="checked"{{/compare}} class="changeUpdateNoAnimation" />
			<label for="showLabelLines">Show label lines</label>
		</div>
	</div>
	<div class="row paddedRow">
		<div class="col-md-3">
			<label for="lineStyle1">Line style</label>
		</div>
		<div class="col-md-9">
			<input type="radio" name="lineStyle" id="lineStyle1" value="curved" class="changeUpdateNoAnimation"
				{{#compare config.labels.lines.style "curved"}}checked="checked"{{/compare}} />
				<label for="lineStyle1" class="padRight">Curved</label>
			<input type="radio" name="lineStyle" id="lineStyle2" value="straight" class="changeUpdateNoAnimation"
				{{#compare config.labels.lines.style "straight"}}checked="checked"{{/compare}} />
				<label for="lineStyle2">Straight</label>
		</div>
	</div>
	<div class="row form-group">
		<div class="col-md-3">
			<label>Color</label>
		</div>
		<div class="col-md-5">
			<input type="radio" name="labelLineColorType" id="labelLineColorType1" value="segment"
				{{#compare config.labels.lines.color "segment"}}checked="checked"{{/compare}} />
			<label for="labelLineColorType1">Same as segment</label>
		</div>
		<div class="col-md-4" style="padding-right: 0px">
			<div class="form-group">
				<input type="radio" name="labelLineColorType" id="labelLineColorType2" value="solid" style="float: left; margin-right: 10px;"
					{{#compare config.labels.lines.color "segment" operator="!="}}checked="checked"{{/compare}} />
				<div id="labelLinesColorGroup" class="colorGroup input-group">
					<input type="text" id="labelLinesColor" value="{{#compare config.labels.lines.color "segment" operator="!="}}{{config.labels.lines.color}}{{/compare}}" class="form-control" />
					<span class="input-group-addon"><i></i></span>
				</div>
			</div>
		</div>
	</div>
</div>
